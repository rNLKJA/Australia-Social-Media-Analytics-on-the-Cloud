version: "3"
services:
  couchdb:
    image: "ibmcom/couchdb3:3.2.1"
    restart: always
    volumes:
      - ./data:/opt/couchdb/data
    environment:
      - COUCHDB_USER={{db_user}}
      - COUCHDB_PASSWORD={{db_password}}}
      - NODENAME={{nodename}}
    container_name: couchdb
    ports:
      - "5984:5984"
      - "4369:4369"
      - "9100-9200:9100-9200"